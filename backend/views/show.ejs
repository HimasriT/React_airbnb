<%- include('partials/header') %>

    <div class="container-fluid">

        <h1>Property details</h1>

        <p><img src="/images/<%= pr.path %>" /></p>
        <p>Name: <%= pr.name %>
        </p>
        <p>City Name: <%= pr.city_name %>
        </p>
        <p>Ratings: <%= pr.ratings %>
        </p>
        <p>Host: <%= pr.host %>
        </p>
        <p>Amenities: <%= pr.amenities %>
        </p>
        <p>Night Fee: <%= pr.night_fee %>
        </p>
        <p>Cleaning Fee: <%= pr.cleaning_fee %>
        </p>
        <p>Service Fee: <%= pr.service_fee %>
        </p>
        <p>No of Bedrooms: <%= pr.bedrooms %>
        </p>
        <p>Short Description: <%= pr.short_description %>
        </p>
        <p>Description: <%= pr.description %>
        </p>

        <a class="btn btn-warning" href="http://localhost:9000/properties/<%=pr._id%>/edit" role="button"> Edit
            property</a>

        <form action="/properties/<%=pr._id %>?_method=DELETE" method="POST">

            <button type="submit" class="btn btn-danger">Delete property</button>

        </form>

        <p>
            <a href="/properties">Back to list</a>

        </p>
    </div>

    <%- include('partials/footer') %>