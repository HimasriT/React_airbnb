<%- include('partials/header') %>
    <div class="row">
        <h3 align="center" style="background-color: blanchedalmond">Edit Property Page</h3>
    </div>
    <br>
    <div class="container">
        <form action="/properties/edit/<%=pr._id%>" method="POST">
            <div class="form-group col-md-2">
                <label>Name</label>
                <input type="text" id="name" name="name" class="form-control" value="<%=pr.name%>" required
                    placeholder="Please enter property name...">
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>City Name</label>
                <input type="text" id="city_name" name="city_name" class="form-control" value="<%=pr.city_name%>"
                    required placeholder="Please enter city name...">
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Host Name</label>
                <input type="text" id="host" name="host" class="form-control" value="<%=pr.host%>" required
                    placeholder="please enter your name...">
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Host ID</label>
                <input type="text" id="host_id" name="host_id" class="form-control" value="<%=pr.host_id%>" required
                    placeholder="please enter your ID...">
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Amenities</label>
                <input type="text" id="amenities" name="amenities" class="form-control" value="<%=pr.amenities%>"
                    required placeholder="please enter the amenities seperated by ,">
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Ratings</label>
                <input type="number" id="ratings" min="1" max="5" name="ratings" class="form-control"
                    value="<%=pr.ratings%>" required placeholder="please enter the known rating for the property...">
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Night Fee</label>
                <input type="number" id="night_fee" min="0" step="100" name="night_fee" class="form-control"
                    value="<%=pr.night_fee%>" required placeholder="please enter the fee per night...">
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Cleaning Fee</label>
                <input type="number" id="cleaning_fee" name="cleaning_fee" class="form-control"
                    value="<%=pr.cleaning_fee%>" required placeholder="please enter the cleaning fee per stay...">
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Service Fee</label>
                <input type="number" id="service_fee" name="service_fee" class="form-control"
                    value="<%=pr.service_fee%>" required placeholder="please enter the service fee per stay...">
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Bedrooms</label>
                <input type="number" id="bedrooms" name="bedrooms" min="1" class="form-control"
                    value="<%=pr.bedrooms%>" required placeholder="please enter the no of bedrooms...">
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Short Description</label>
                <textarea id="short_description" name="short_description" class="form-control"
                    value="<%=pr.short_description%>" required
                    placeholder="please enter the property short description..."></textarea>
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Description</label>
                <textarea id="description" name="description" class="form-control"
                    value="<%=pr.description%>" required
                    placeholder="please enter the property description..."></textarea>
            </div>
            <br>
            <div class="form-group col-md-2">
                <label>Image Name</label>
                <input type="text" id="image" name="image" class="form-control" value="<%=pr.path%>" required
                placeholder="please enter the image path...">
            </div>
            <br>
            <div class="form-group col-md-4">
                <button type="submit" id="edit" class="btn btn-outline-dark active">Edit Property</button>
                <button type="button" id="back" class="btn btn-outline-dark active"><a href="/properties" style="text-decoration: none; color: white">Back to list</a></button>
            </div>
        </form>


    </div>


    <%- include('partials/footer') %>